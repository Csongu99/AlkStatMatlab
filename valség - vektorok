A = [-52, -1, 52, 0, 32, 31, -10, -23, 48, 22];
B = [0, -1, 15, 10, -35, 38, 1, -53, 33, -28];
C = [-45, -27, 8, 49, 52, 32, -11, 17, -43];

[a, b, c] = ndgrid(A, B, C);

osszeg_feltetel = (a + b + c >= 0);
szorzat_feltetel = (a .* b .* c >= 0);

p1 = mean(osszeg_feltetel(:));
p2 = mean(szorzat_feltetel(:));

fprintf('P(a+b+c>=0) = %.6f\n', p1);
fprintf('P(a*b*c>=0) = %.6f\n', p2);
